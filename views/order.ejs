<!DOCTYPE HTML>
<html lang="zh-cn">
<head>
    <meta charset="UTF-8">
    <title>餐库</title>
    <link href="/css/reset.css" rel="stylesheet" type="text/css"/>
    <link href="/css/style.css" rel="stylesheet" type="text/css"/>
    <script src="/js/jquery.js" type="text/javascript"></script>
    <!--[if IE]>
    <script src="/js/html5.js"></script><![endif]-->
</head>
<body>
<header id="head">
    <nav class="nav">
        <div class="wap">
            <div title="餐库" class="logo"><a href="/"><span>餐库</span></a></div>
            <ul>
                <li><a href="/today">今日订单</a></li>
                <% if (locals.session.user) { %>
                <li class="nav_item_my">
                    <a href='/logout'><%=locals.session.user.name%></a>
                    <ul id="nav_my">
                        <li><a href="/order">历史订单</a></li>
                        <li><a href="/logout">退出</a></li>
                    </ul>
                </li>
                <% } %>
            </ul>
        </div>
    </nav>
</header>
<div class="wap">
    <h1 class="page-title">我的历史订单</h1>
    <section class="main clearfix">
        <section class="fav clearfix">
            <table class="myorder" cellpadding="0" cellspacing="0">
                <% orders.forEach(function(item){ %>
                <tbody>
                <tr class="sep-row">
                    <td colspan="6"></td>
                </tr>
                <tr class="hd-row">
                    <td colspan="6"><%=item.time%> 在<a href="/shop/<%=item.shop_id%>"> <%=item.shop_name%> </a>购买的清单
                    </td>
                </tr>
                <% for(var i = 0; i < item.order.length; i++){%>
                <tr>
                    <td class="shop_name-td"><%=item.order[i].name%></td>
                    <td class="price-td"><%=item.order[i].price%>元</td>
                    <td class="num-td"><%=item.order[i].num%>份</td>
                    <% if(i==0&item.order.length==1){%>
                    <td class="total-td">共计 <%=item.total%> 元</td>
                    <td class="meta-td">无备注</td>
                    <td class="action-td"><input type="button" class="btn again" value="再买一次！"
                                                 onclick="javascript:(alert('抱歉，此功能暂未开放！'))"></td>
                    <%}else if(i==0&item.order.length>1){%>
                    <td rowspan="<%=item.order.length%>" class="total-td">共计 <%=item.total%> 元</td>
                    <td rowspan="<%=item.order.length%>" class="meta-td">无备注</td>
                    <td rowspan="<%=item.order.length%>" class="action-td"><input type="hidden" id="order-<%=item._id%>"
                                                                                  value="<%=item._id%>"> <input
                            type="button" class="btn" value="再买一次！" onclick="javascript:(alert('抱歉，此功能暂未开放！'))"></td>
                    <%}%>
                </tr>
                <%}%>
                <tbody>
                <% }) %>
            </table>
        </section>
    </section>
</div>
</body>
</html>